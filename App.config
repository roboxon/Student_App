<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- Base Configuration -->
        <add key="Environment" value="Development" />
        <add key="TokenEndpoint" value="https://training.elexbo.de/studentLogin/loginByemailPassword" />
        <add key="ApiBaseUrl" value="https://training.elexbo.de" />
        <add key="TokenRefreshThreshold" value="300" />

        <!-- Reports Service -->
        <add key="ReportsServiceUrl" value="https://api.example.com/reports" />
        <add key="ReportsEndpoint" value="reports" />
        <add key="ReportsTimeout" value="30" />

        <!-- Attendance Service -->
        <add key="AttendanceServiceUrl" value="https://api.example.com/attendance" />
        <add key="AttendanceEndpoint" value="attendance" />
        <add key="AttendanceTimeout" value="30" />

        <!-- Schedule Service -->
        <add key="ScheduleServiceUrl" value="https://api.example.com/schedule" />
        <add key="ScheduleEndpoint" value="schedule" />
        <add key="ScheduleTimeout" value="30" />

        <!-- Profile Service -->
        <add key="ProfileServiceUrl" value="https://api.example.com/profile" />
        <add key="ProfileEndpoint" value="profile" />
        <add key="ProfileTimeout" value="30" />
    </appSettings>
</configuration> 